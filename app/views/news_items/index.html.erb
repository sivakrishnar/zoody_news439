<h1>Listing news_items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Added on</th>
    <th>Content</th>
    <th>Added by</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news_items.each do |news_item| %>
  <tr>
    <td><%= news_item.title %></td>
    <td><%= news_item.added_on %></td>
    <td><%= news_item.content %></td>
    <td><%= news_item.added_by %></td>
    <td><%= news_item.active %></td>
    <td><%= link_to 'Show', news_item %></td>
    <td><%= link_to 'Edit', edit_news_item_path(news_item) %></td>
    <td><%= link_to 'Destroy', news_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

